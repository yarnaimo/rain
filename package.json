{
  "name": "@yarnaimo/rain",
  "version": "0.2.0",
  "repository": "github:yarnaimo/rain",
  "license": "MIT",
  "author": "yamaimo <yarnaimo@gmail.com>",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "debug": "node --inspect -r ts-node/register",
    "dev": "yarn ts-node src/index.ts",
    "prepare": "yarn build",
    "start": "NODE_ENV=production node -r tsconfig-paths/register dist/index.js",
    "test": "NODE_ENV=test jest -w1",
    "ts-node": "ts-node -r tsconfig-paths/register"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "class-validator": "^0.9.1",
    "io-ts": "^1.8.2",
    "io-ts-types": "^0.4.2",
    "luxon": "^1.11.3"
  },
  "devDependencies": {
    "@types/luxon": "^1.11.1",
    "@yarnaimo/tss": "^0.0.1"
  },
  "lint-staged": {
    "./package.json": [
      "sort-package-json",
      "git add"
    ],
    "*.{js,jsx,ts,tsx,css,scss,vue,gql,md}": [
      "prettier --write --ignore-path .gitignore",
      "git add"
    ]
  }
}
